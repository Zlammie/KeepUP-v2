<!DOCTYPE html>
<html>
<head>
  <title>Manage Communities</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
</head>
<body class="p-3">
  <a href="/admin/users" class="btn btn-link">&larr; Back to Users</a>
  <h1 class="mb-3">Communities for <%= targetUser.email %></h1>
  <p class="text-muted mb-4">Company: <strong><%= targetUser.company?.name || '' %></strong></p>

  <form method="POST" class="vstack gap-3">
    <div class="card">
      <div class="card-header fw-semibold">Allowed Communities</div>
      <div class="card-body">
        <% if (communities && communities.length) { %>
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-2">
            <% communities.forEach(c => { const checked = assigned.includes(String(c._id)); %>
              <div class="col">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox"
                         name="communityIds"
                         value="<%= c._id %>"
                         id="comm-<%= c._id %>"
                         <%= checked ? 'checked' : '' %> />
                  <label class="form-check-label" for="comm-<%= c._id %>"><%= c.name %></label>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <div class="alert alert-info">No communities found for this company.</div>
        <% } %>
      </div>
    </div>

    <div class="hstack gap-2">
      <button class="btn btn-primary" type="submit">Save</button>
      <a class="btn btn-outline-secondary" href="/admin/users">Done</a>
    </div>
  </form>
</body>
</html>
