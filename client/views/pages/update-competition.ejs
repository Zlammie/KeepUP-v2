);

// ðŸ•’ Debounce Save
const debounceSave = () => {
  clearTimeout(saveTimeout);
  saveTimeout = setTimeout(autoSaveMetrics, 800);
};

// ðŸ“¦ Collect Payload
const getMetricsPayload = () => {
  const data = {};
  metricsFields.forEach(field => {
    data[field.name] = field.value;
  });

  // âž• Add pros and cons as arrays
  const proTags = document.querySelectorAll('#prosList .badge');
  const conTags = document.querySelectorAll('#consList .badge');

  data.pros = [...proTags].map(tag => tag.textContent);
  data.cons = [...conTags].map(tag => tag.textContent);

  return data;
};

async function populateTopPlanDropdowns() {
  const fps = await fetch(`/api/competitions/${competitionId}/floorplans`)
    .then(r => r.json());

  const selects = [
    document.getElementById('topPlan1'),
    document.getElementById('topPlan2'),
    document.getElementById('topPlan3')
  ];

  const existingValues = {
    topPlan1: '<%= competition.topPlan1 || "" %>',
    topPlan2: '<%= competition.topPlan2 || "" %>',
    topPlan3: '<%= competition.topPlan3 || "" %>'
  };

  function renderOptions(exclude = []) {
    return fps
      .filter(fp => !exclude.includes(fp.name))
      .map(fp => `<option value="${fp.name}">${fp.name}</option>`)
      .join('');
  }
 

  function updateDropdowns() {
    const selected = selects.map(sel => sel.value).filter(Boolean);

    selects.forEach((sel, idx) => {
      const current = sel.value;
      sel.innerHTML = `<option value="">${idx + 1}. Select Plan</option>` +
        renderOptions(selected.filter((_, i) => i !== idx));
      sel.value = current;
    });
  }
  

  selects.forEach((sel, idx) => {
    sel.innerHTML = `<option value="">${idx + 1}. Select Plan</option>` +
      renderOptions();
    const key = `topPlan${idx + 1}`;
    if (existingValues[key]) sel.value = existingValues[key];

    sel.addEventListener('change', () => {
      updateDropdowns();
      debounceSave(); // reuses your existing autosave function
    });
  });

  updateDropdowns();
}

