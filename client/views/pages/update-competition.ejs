  };

  const res = await fetch(`/api/competitions/${competitionId}/monthly-metrics`, {
    method: 'PUT',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify(payload)
  });

  if (!res.ok) console.error('Monthly metrics failed');
};

