

  <!-- views/partials/top-nav-contacts.ejs -->
  <div class="header-wrapper">
    <header class="header">
      <div class="header-items">
       <ul>
        <li>
          <a href="/add-lead" class="top-nav-link">
            <div><img src="/assets/icons/add-circle-icon.svg" alt=""></div>
            <div>Add Contact</div>
          </a>
        </li>
        <li>
          <a href="/contacts" class="top-nav-link">
            <div><img src="/assets/icons/contacts.svg" alt=""></div>
            <div>Contacts</div>
          </a>
        </li>
        <li>
          <a href="/realtors" class="top-nav-link">
            <div><img src="/assets/icons/realtor.svg" alt=""></div>
            <div>Realtors</div>
          </a>
        </li>
         <li>
          <a href="/lenders" class="top-nav-link">
            <div><img src="/assets/icons/lender.svg" alt=""></div>
            <div>Lenders</div>
        </a>
       </li>    
       </ul>
      </div>
    </header>
  </div>
  <script nonce="<%= typeof cspNonce !== 'undefined' ? cspNonce : '' %>">
    (() => {
      const { pathname } = window.location;
      document.querySelectorAll('.top-nav-link').forEach((link) => {
        const href = link.getAttribute('href');
        if (!href || href === '#') return;
        if (pathname === href || (href !== '/' && pathname.startsWith(href))) {
          link.classList.add('active');
          link.setAttribute('aria-current', 'page');
        }
      });
    })();
  </script>
