{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,

    "strict": true,
    "alwaysStrict": true,

    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",

    "skipLibCheck": true,
    "lib": ["ES2021"],

    // no .d.ts with JS projects
    "declaration": false,
    "declarationMap": false,

    // sourcemap settings are harmless either way
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": false,

    "outDir": "lib",

    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,

    "useUnknownInCatchVariables": false
  },

  // Remove this block if you aren't using ts-node anywhere
  "ts-node": {
    "transpileOnly": true
  },

  // Point to your actual JS locations (adjust as needed)
  "include": [
    "server/**/*.js",
    "client/**/*.js",
    "scripts/**/*.js"
  ],
  "exclude": ["node_modules", "dist", "build", "lib"]
}
